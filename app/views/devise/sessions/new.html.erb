<%content_for :nav do%>
	<%= render :partial => 'common/nav', :locals => {:curr => 'Sign in'} -%>
<%end%>
<%content_for :content do %>
	<h2>Sign in</h2>

	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "forms columnar"}) do |f| %>
		<fieldset>
		    <ul>
		    	<li>
	                <%= f.label :username, :class => "bold" %>
	                <%= f.text_field :login, :autofocus => true %>
	            </li>
	            <li>
	                <%= f.label :password, :class => "bold" %>
	                <%= f.password_field :password %>
	            </li>

	            <% if devise_mapping.rememberable? -%>
		            <li>
		                <%= f.check_box :remember_me %><%= f.label :remember_me, :class => "bold" %>
		            </li>
				<% end -%>
		    </ul>
		</fieldset>
	  <div><%= f.submit "Sign in" %></div>
	<% end %>

	<%= render "devise/shared/links" %>
<%end%>


