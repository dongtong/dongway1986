<%content_for :nav do%>
<%= render :partial => 'common/nav', :locals => {:curr => 'Sign up'} -%>
<%end%>
<%content_for :content do %>
  	<h2>Sign up</h2>

	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "forms columnar"}) do |f| %>
		<fieldset>
		    <ul>
		        <li><%= devise_error_messages! %></li>

		        <li>
	                <%= f.label :username, :class => "bold" %>
	                <%= f.text_field :username, :autofocus => true %>
	            </li>
			  
		        <li>
	                <%= f.label :email, :class => "bold" %>
	                <%= f.email_field :email %>
	            </li>

	            <li>
	                <%= f.label :password, :class => "bold" %>
	                <%= f.password_field :password %>
	            </li>

	            <li>
	                <%= f.label :password_confirmation, :class => "bold" %>
	                <%= f.password_field :password_confirmation %>
	            </li>

	            <li class="push">
	                <%= f.submit "Sign up", :class => "btn" %>
	            </li>
			</ul>
		</fieldset>
	<% end %>

	<%= render "devise/shared/links" %>
<% end %>


